    body
        .header__container 
            header#header.header
                a(href="/").logo
                    img(src="/images/logo.png" alt="FACIUNI")
                .toggle-menu
                    #toggle-menu.toggle-menu__icon
                        .first-bar
                        .second-bar
                        .third-bar
            #sidebar.sidebar
                block menu
        main.main
            block main
        footer.footer
            .footer__container 
                .footer__content
                    .footer__content-item 
                        img(src="/images/logo-footer.png" alt="FACIUNI").footer__img
