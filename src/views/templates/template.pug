                                a(href="https://www.facebook.com/faciuniBecas/" target="_blank")
                                    img(src="/images/social-media/facebook.png" alt="logo de facebook").footer__social-icon 
                                    p.footer__social-title Facebook
                            li.footer__social-item
                                a(href="https://twitter.com/FACIUNIBecas" target="_blank") 
                                    img(src="/images/social-media/twitter.png" alt="logo de twitter").footer__social-icon
                                    p.footer__social-title Twitter
                            li.footer__social-item
                                a(href="https://www.youtube.com/channel/UCRz1ct0514QHPoM_FFPhhuQ" target="_blank") 
                                    img(src="/images/social-media/youtube.png" alt="logo de youtube").footer__social-icon
                                    p.footer__social-title Youtube
                            li.footer__social-item
                                a(href="https://www.instagram.com/Faciunibecas/" target="_blank") 
                                    img(src="/images/social-media/instagram.png" alt="logo de instagram").footer__social-icon
                                    p.footer__social-title Instagram
                .footer__line
                .footer__content
                    .footer__clients
                        a(href="").footer__clients-img
